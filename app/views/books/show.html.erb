
<div class="container">
	<div class="row">
		
		<h2>Book detail</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "noimage.jpg",size:'100x100' %>
								<%= @user.name %>
							<% end %>
						</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<td><%= link_to 'edit', edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
						<td><%= link_to 'destroy', book_path(@book.id), class: "btn btn-danger btn-sm" ,method: :delete, "data-confirm" => "本当に消しますか?" %></td>
					</tr>
				
			</tbody>
		</table>
	</div>
</div>