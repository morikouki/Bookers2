
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render '/users/info', user: @user %>
    		<%= render '/books/newbook', book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
						<tr>
							<td>
								<%= link_to user_path(@user.id) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "noimage.jpg",size:'100x100' %>
									<%= @user.name %>
								<% end %>
							</td>
							<td><%= @book.title %></td>
							<td><%= @book.body %></td>
							<% if @user.id == current_user.id %>
								<td><%= link_to 'edit', edit_book_path, class: "btn btn-success btn-sm" %></td>
								<td><%= link_to 'destroy', book_path, class: "btn btn-danger btn-sm" ,method: :delete, "data-confirm" => "本当に消しますか?" %></td>
							<% end %>
						</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>