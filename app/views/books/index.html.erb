<div class="container">
	<div class="row">
		<h2>Books</h2>
		<table class="table">
    		<thead>
        		<tr>
            		<th>プロフィール画像</th>
            		<th>Title</th>
            		<th>Opinion</th>
        		</tr>
    		</thead>
    		<tbody>
                <% @books.each do |book| %>
        		<tr>
            		<td>プロフィール画像</td>
            		<td><%= link_to book.title, book_path(book.id) %></td>
            		<td><%= book.body %></td>
        		</tr>
                <% end %>
    		</tbody>
		</table>
		<%= link_to 'New', new_book_path %>
	</div>
</div>
