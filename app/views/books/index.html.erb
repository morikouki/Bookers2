
<div class="container">
	<div class="row">
        <div class="col-xs-3">
            <% if @book.errors.any? %>
                <p class="error-message">error!!!!</p>
            <% end %>
            <% if @book.errors.any? %>
                 <div class="alert alert-warning">
                     <ul>
                         <% @book.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                         <% end %>
                    </ul>
                </div>
            <% end %>
            <%= render '/users/info', user: @user %>
            <%= render '/books/newbook', book: @book %>
        </div>
        <div class="col-xs-9">
    		<h2>Books</h2>
    		<table class="table">
        		<thead>
            		<tr>
                		<th></th>
                		<th>Title</th>
                		<th>Opinion</th>
                        <th></th>
            		</tr>
        		</thead>
        		<tbody>
                    <% @books.each do |book| %>
                		<tr>
                    		<td><%= link_to attachment_image_tag(book.user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "noimage.jpg", size:'100x100'), user_path(book.user) %></td>
                    		<td><%= link_to book.title, book_path(book.id) %></td>
                    		<td><%= book.body %></td>
                            <td>
                                <% if book.favorited_by?(current_user) %>
                                    <%= link_to book_favorite_path(book), method: :delete do %>
                                        <i class="fas fa-heart"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to book_favorite_path(book), method: :post do %>
                                        <i class="far fa-heart"></i>
                                    <% end %>
                                <% end %>
                            </td>
                		</tr>
                    <% end %>
        		</tbody>
    		</table>
        </div>
	</div>
</div>
