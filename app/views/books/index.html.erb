
<div class="container">
	<div class="row">
        <div class="col-xs-3">
            <% if @book.errors.any? %>
            <p class="error">error!!!!</p>
        <% end %>
        <% if @book.errors.any? %>
             <div class="alert alert-warning">
                 <ul>
                     <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                     <% end %>
                </ul>
            </div>
        <% end %>
            <%= render '/users/info', user: @user %>
            <%= render '/books/newbook', book: @book %>
        </div>
        <div class="col-xs-9">
    		<h2>Books</h2>
    		<table class="table">
        		<thead>
            		<tr>
                		<th></th>
                		<th>Title</th>
                		<th>Opinion</th>
                        
            		</tr>
        		</thead>
        		<tbody>
                    <% @books.each do |book| %>
                		<tr>
                    		<td><%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "noimage.jpg",size:'100x100' %></td>
                    		<td><%= link_to book.title, book_path(book.id) %></td>
                    		<td><%= book.body %></td>
                		</tr>
                    <% end %>
        		</tbody>
    		</table>
        </div>
	</div>
</div>
