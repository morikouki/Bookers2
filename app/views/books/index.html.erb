<div class="container">
	<div class="row">
		<h2>Books</h2>
		<table class="table">
    		<thead>
        		<tr>
            		<th>プロフィール画像</th>
            		<th>Title</th>
            		<th>Opinion</th>
                    
        		</tr>
    		</thead>
    		<tbody>
                <% @books.each do |book| %>
            		<tr>
                		<td><%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "" %></td>
                		<td><%= link_to book.title, book_path(book.id) %></td>
                		<td><%= book.body %></td>
            		</tr>
                <% end %>
    		</tbody>
		</table>
		<%= render partial: 'newbook', locals: { 'book': '@book' }%>
	</div>
</div>
