<div class="container">
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
		<h1>Editing Book</h1>
		<%= form_for (@book) do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>
			<%= f.text_field :title %>
		</div>
		<div class="">
			<label for="book_body">Opinion</label>
			<%= f.text_area :body %>
		</div>
			<%= f.submit 'Update book' %>
		<% end %>
		</div>
	</div>
</div>