<div class="container">
	<div class="row">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "" %></td>
					<td><%= link_to(book_path) do %>
						<%= @book.title %>
					    <% end %>
					</td>
					<td><%= @book.body %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>