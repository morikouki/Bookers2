<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<p class="flash"><%= flash[:update] %></p>

			<%= render 'info', user: @user %>
    		<%= render '/books/newbook', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to attachment_image_tag(book.user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "noimage.jpg", size:'100x100'), user_path(book.user) %>
						</td>
						<td>
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
						    <% end %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>