<div class="container">
	<div class="row">
		<h2>User info</h2>
		<%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "" %>
		<table class="table">
			<tbody>
				<tr>
					<th>name</th>
					<td><%= user.name %></td>
				</tr>
				<tr>
					<th>introduction</th>
					<td><%= user.introduction %></td>
				</tr>
			</tbody>
		</table>
		<%= link_to(edit_user_path{@user}) do %>
        	<span class="btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
	</div>
</div>