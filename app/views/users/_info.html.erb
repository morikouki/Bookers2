
		<h2>User info</h2>
		<%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "pull-left profile-img", fallback: "noimage.jpg",size:'100x100' %>
		<table class="table">
			<tbody>
				<tr>
					<th>name</th>
					<td><%= user.name %></td>
				</tr>
				<tr>
					<th>introduction</th>
					<td><%= user.introduction %></td>
				</tr>
				<tr>
				    <th>follows</th>
				    <th><%= link_to user.follower.count, user_follows_path(user) %></th>
				  </tr>
				  <tr>
				    <th>followers</th>
				    <th><%= link_to user.followed.count, user_followers_path(user) %></th>
				  </tr>
			</tbody>
		</table>
		<% if current_user != user %>
		  <% if current_user.following?(user) %>
		    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
		  <% else %>
		    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
		  <% end %>
		<% end %>
		<div class="row">
				<%= link_to edit_user_path(user) do %>
		        	<span class="btn btn-default glyphicon glyphicon-wrench col-xs-12" aria-hidden="true"></span>
		        <% end %>
    	</div>
	