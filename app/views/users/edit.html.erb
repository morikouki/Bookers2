<div class="container">
	<div class="row">
		<h2>User info</h2>
		<% if @user.errors.any? %>
   			<p class="error">error!!!!</p>
		<% end %>
		<% if @user.errors.any? %>
 			 <div class="alert alert-warning">
   				 <ul>
     				 <% @user.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
     				 <% end %>
    			</ul>
  			</div>
		<% end %>
		<%= form_for(@user) do |f| %>
		  <div class="field">
		  	<label for="user_name">Name</label>
		  	<%= f.text_field :name %>
		  </div>
		  <div class="field">
			 <label for="user_profile_image">Image</label>
			 <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		  </div>
		  <div class="field">
		  	<label for="user_introduction">Introduction</label>
		  	<%= f.text_area :introduction %>
		  </div>
		<%= f.submit 'Update User' %>
		<% end %>
	</div>
</div>



